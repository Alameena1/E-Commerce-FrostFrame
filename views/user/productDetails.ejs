    <div class="card">
        <div class="product-imgs">
            <div class="img-display">
                <div class="img-showcase">
                    <% products.productImages.forEach(image=> { %>
                        <img src="<%= image %>" alt="Product Image" />
                        <% }) %>
                </div>
                <div class="imgSecond">
                    <% products.productImages.forEach(image=> { %>
                        <img src="<%= image %>" alt="Product Image" />
                        <% }) %>
                </div>
            </div>
        </div>
        <div class="product-content">
            <h2 class="product-title">
                <%= products.name %>
            </h2>
            <div class="product-detail">
                <h2>About This Item:</h2>
                <p>
                    <%= products.description %>
                </p>
                <ul>
                    <li>Category: <span>
                            <%= products.category %>
                        </span></li>
                </ul>
            </div>
            <div class="product-price">
                <% if(products.stock <=0) { %>
                    <p class="out-of-stock">Out of Stock</p>
                    <% } else if(products.stock < 10) { %>
                        <% if(products.offerprice) { %>
                            <p class="new-price">Offer Price: <span>₹ <%= products.offerprice %></span></p>
                            <% } %>
                                <p class="few-stock-left">Few Stock Left</p>
                                <p class="last-price">Regular Price: <span>₹ <%= products.price %></span></p>
                                <% } else { %>
                                    <% if(products.offerprice) { %>
                                        <p class="new-price">Offer Price: <span>₹ <%= products.offerprice %></span></p>
                                        <% } %>
                                            <p class="last-price">Regular Price: <span>₹ <%= products.price %></span>
                                            </p>
                                            <% } %>
            </div>


            <div class="purchase-info">

                <% if (products.stock > 0) { %>
                    <form action="/addProductCart/<%= products._id %>" method="post">
                        <button type="submit" class="btn" id="addToCartBtn" data-user-id="<%= products._id %>">
                            Add to Cart <i class="fas fa-shopping-cart"></i>
                        </button>
                    </form>
                <% } else { %>
                    <button type="button" class="btn" id="addToCartBtn" disabled>
                        Out of Stock <i class="fas fa-shopping-cart"></i>
                    </button>
                <% } %>
                
            </div>
        </div>
    </div>







    <footer class="footer">
