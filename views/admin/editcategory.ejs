<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Category</title>
    <link rel="stylesheet" href="/asset/admin/editcategory.css">
</head>
<body>
    <div class="container">
        <h1>EditCategory</h1>
        <a href="/admin/categorymanagement">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
              <line x1="19" y1="12" x2="5" y2="12"></line>
              <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
          </a>
          
        <% if(errorMessage){ %>
            <p style="color: red;"><%= errorMessage %></p>
        <% } %>

        <form class="admin-form" action="/admin/editcategory/<%=editcategory._id%>" method="POST" onsubmit="return validateForm()">
            <div class="form-group">
                <label class="admin-label" for="categoryName">edit Name:</label>
                <input class="admin-input" type="text" id="categoryName" name="categoryName" value="<%=editcategory.categoryName%>">
            </div>
            <button type="submit">Edit Category</button>
        </form>
    </div>

    <script>
         function validateForm() {
            var categoryName = document.getElementById("categoryName").value;
          
            var specialCharRegex = /[!@#$%^&*(),.?":{}|<>]/;
            var errorMessage = document.getElementById("errorMessage");

          
            
            if (specialCharRegex.test(categoryName)) {
                errorMessage.textContent = "Category name cannot contain special characters";
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
